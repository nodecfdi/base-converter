{
    "name": "@nodecfdi/base-converter",
    "version": "0.1.3",
    "description": "Librer√≠a que convierte un numero entre bases arbitrarias",
    "keywords": [
        "base",
        "converter",
        "decimal",
        "hexadecimal",
        "binary"
    ],
    "private": false,
    "author": "OcelotlStudio <contacto@ocelotlstudio.com>",
    "license": "MIT",
    "type": "commonjs",
    "main": "./dist/base-converter.js",
    "module": "./dist/base-converter.mjs",
    "unpkg": "./dist/base-converter.global.js",
    "browser": "./dist/base-converter.global.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "prepare": "is-ci || husky install",
        "lint": "eslint --fix --ext .js,.ts .",
        "lint:check": "eslint --ext .js,.ts .",
        "format": "prettier --write \"**/*.{js,ts,json}\"",
        "format:check": "prettier --check \"**/*.{js,ts,json}\"",
        "test": "vitest",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "build": "pnpm prebuild && tsup && pnpm gen:types",
        "prebuild": "rimraf dist",
        "gen:docs": "rimraf docs && typedoc --options typedoc.json",
        "gen:types": "api-extractor run --local",
        "release": "pnpm run build && pnpm changeset publish"
    },
    "repository": "https://github.com/nodecfdi/base-converter",
    "bugs": {
        "url": "https://github.com/nodecfdi/base-converter/issues"
    },
    "homepage": "https://github.com/nodecfdi/base-converter",
    "devDependencies": {
        "@changesets/cli": "^2.26.1",
        "@commitlint/cli": "^17.5.1",
        "@microsoft/api-extractor": "^7.34.4",
        "@nrsk/config-conventional": "^1.0.0",
        "@types/is-ci": "^3.0.0",
        "@types/node": "^18.15.11",
        "@typescript-eslint/eslint-plugin": "^5.57.0",
        "@typescript-eslint/parser": "^5.57.0",
        "@vitest/coverage-istanbul": "^0.32.0",
        "eslint": "^8.37.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-config-xo": "^0.43.1",
        "eslint-config-xo-typescript": "^0.57.0",
        "eslint-plugin-tsdoc": "^0.2.17",
        "eslint-plugin-unicorn": "^46.0.0",
        "husky": "^8.0.3",
        "is-ci": "^3.0.1",
        "lint-staged": "^13.2.0",
        "prettier": "^2.8.7",
        "rimraf": "^4.4.1",
        "tsup": "^6.7.0",
        "typedoc": "^0.24.0",
        "typedoc-theme-hierarchy": "^4.0.0",
        "typescript": "^5.0.3",
        "vite": "^4.2.1",
        "vitest": "^0.32.0"
    },
    "commitlint": {
        "extends": [
            "@nrsk/config-conventional"
        ]
    },
    "lint-staged": {
        "*.{js,ts,json}": [
            "prettier --write"
        ],
        "*.{js,ts}": [
            "eslint --fix"
        ]
    },
    "engines": {
        "node": ">=14.16.0"
    },
    "browserslist": [
        "defaults",
        "not IE 11"
    ]
}
