{
  "name": "@nodecfdi/base-converter",
  "type": "module",
  "version": "2.0.0",
  "packageManager": "pnpm@10.15.1",
  "description": "Librería que convierte un número entre bases arbitrarias",
  "author": "Fernando Isidro <luffynando@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/nodecfdi/base-converter",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodecfdi/base-converter.git"
  },
  "bugs": {
    "url": "https://github.com/nodecfdi/base-converter/issues"
  },
  "keywords": [
    "base",
    "converter",
    "decimal",
    "hexadecimal",
    "binary"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.19"
  },
  "scripts": {
    "prepare": "is-in-ci || husky",
    "prebuild": "pnpm lint:check && pnpm typecheck",
    "build": "tsdown --clean --dts",
    "postbuild": "pnpm gen:docs && git add docs/*",
    "gen:docs": "typedoc",
    "changelog": "auto-changelog -p && git add CHANGELOG.md",
    "release": "np",
    "version": "pnpm build && pnpm changelog",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "tool:code": "pnpm run lint:check && pnpm run typecheck",
    "tool:build": "pnpm run tool:code && pnpm run test:run"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eienjs/eslint-config": "^1.2.2",
    "@types/node": "^22.18.0",
    "@vitest/coverage-istanbul": "^3.2.4",
    "auto-changelog": "^2.5.0",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "is-in-ci": "^2.0.0",
    "np": "^10.2.0",
    "tsdown": "^0.14.2",
    "typedoc": "^0.28.12",
    "typedoc-github-theme": "^0.3.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "pnpm": {},
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "typedocOptions": {
    "plugin": [
      "typedoc-github-theme"
    ],
    "entryPoints": [
      "./index.ts"
    ],
    "entryPointStrategy": "expand",
    "out": "./docs"
  },
  "auto-changelog": {
    "template": "keepachangelog",
    "hideCredit": true
  },
  "np": {
    "message": "chore(release): :tada: %s",
    "tag": "latest",
    "branch": "main",
    "testScript": "test:run"
  },
  "tsdown": {
    "entry": [
      "index.ts"
    ],
    "shims": true,
    "format": [
      "esm"
    ],
    "platform": "neutral",
    "exports": true,
    "unbundle": true
  }
}
