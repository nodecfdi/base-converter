{
    "name": "@nodecfdi/base-converter",
    "version": "0.1.2",
    "description": "Librer√≠a que convierte un numero entre bases arbitrarias",
    "keywords": [
        "base",
        "converter",
        "decimal",
        "hexadecimal",
        "binary"
    ],
    "private": false,
    "author": "OcelotlStudio <contacto@ocelotlstudio.com>",
    "license": "MIT",
    "type": "module",
    "main": "dist/base-converter.js",
    "module": "dist/base-converter.cjs",
    "unpkg": "dist/base-converter.global.js",
    "browser": "dist/base-converter.global.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/base-converter.js",
            "require": "./dist/base-converter.cjs",
            "default": "./dist/base-converter.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "prepare": "is-ci || husky install",
        "lint": "eslint --fix --ext .js,.ts .",
        "lint:check": "eslint --ext .js,.ts .",
        "format": "prettier --write \"**/*.{js,ts,json}\"",
        "type:check": "api-extractor run",
        "test": "vitest",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "build": "pnpm prebuild && tsup",
        "prebuild": "rimraf dist",
        "gen:docs": "pnpm type:check && rimraf docs && typedoc --options typedoc.json",
        "release": "pnpm run build && pnpm changeset publish"
    },
    "repository": "https://github.com/nodecfdi/base-converter",
    "bugs": {
        "url": "https://github.com/nodecfdi/base-converter/issues"
    },
    "homepage": "https://github.com/nodecfdi/base-converter",
    "devDependencies": {
        "@changesets/cli": "^2.26.0",
        "@commitlint/cli": "^17.4.4",
        "@microsoft/api-extractor": "^7.34.4",
        "@nrsk/config-conventional": "^1.0.0",
        "@types/is-ci": "^3.0.0",
        "@types/node": "^18.14.1",
        "@typescript-eslint/eslint-plugin": "^5.53.0",
        "@typescript-eslint/parser": "^5.53.0",
        "@vitest/coverage-istanbul": "^0.29.0",
        "eslint": "^8.34.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-config-xo": "^0.43.1",
        "eslint-config-xo-typescript": "^0.56.0",
        "eslint-plugin-tsdoc": "^0.2.17",
        "eslint-plugin-unicorn": "^45.0.2",
        "husky": "^8.0.3",
        "is-ci": "^3.0.1",
        "lint-staged": "^13.1.2",
        "prettier": "^2.8.4",
        "rimraf": "^4.1.2",
        "tsup": "^6.6.3",
        "tsx": "^3.12.3",
        "typedoc": "^0.23.25",
        "typedoc-theme-hierarchy": "^3.0.2",
        "typescript": "^5.0.0",
        "vite": "^4.1.4",
        "vitest": "^0.29.0"
    },
    "commitlint": {
        "extends": [
            "@nrsk/config-conventional"
        ]
    },
    "lint-staged": {
        "*.{js,ts,json}": [
            "prettier --write"
        ],
        "*.{js,ts}": [
            "eslint --fix"
        ]
    },
    "engines": {
        "node": ">=14.16.0"
    },
    "browserslist": [
        "defaults",
        "not IE 11"
    ]
}
