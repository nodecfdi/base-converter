{
    "name": "@nodecfdi/base-converter",
    "version": "1.0.0",
    "description": "Librería que convierte un número entre bases arbitrarias",
    "keywords": [
        "base",
        "converter",
        "decimal",
        "hexadecimal",
        "binary"
    ],
    "private": false,
    "author": "OcelotlStudio <contacto@ocelotlstudio.com>",
    "license": "MIT",
    "type": "module",
    "main": "./dist/base-converter.cjs",
    "module": "./dist/base-converter.js",
    "unpkg": "./dist/base-converter.global.js",
    "browser": "./dist/base-converter.global.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/base-converter.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/base-converter.cjs"
            }
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "prepare": "is-ci || husky install",
        "format": "prettier --write --ignore-unknown '**/*'",
        "format:check": "prettier --check --ignore-unknown '**/*'",
        "lint": "eslint . --fix --ext .ts,.js",
        "lint:check": "eslint . --ext .ts,.js",
        "test": "vitest",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "build": "rimraf dist && tsup",
        "gen:docs": "rimraf docs && typedoc --options typedoc.json",
        "release": "pnpm run build && pnpm changeset publish"
    },
    "repository": "https://github.com/nodecfdi/base-converter",
    "bugs": {
        "url": "https://github.com/nodecfdi/base-converter/issues"
    },
    "homepage": "https://github.com/nodecfdi/base-converter",
    "devDependencies": {
        "@changesets/cli": "^2.26.2",
        "@commitlint/cli": "^17.6.6",
        "@nodecfdi/eslint-config-nodecfdi": "^0.1.0",
        "@nrsk/config-conventional": "^1.0.0",
        "@types/is-ci": "^3.0.0",
        "@types/node": "^20.4.0",
        "@vitest/coverage-istanbul": "^0.34.0",
        "eslint": "^8.44.0",
        "husky": "^8.0.3",
        "is-ci": "^3.0.1",
        "jsdom": "^23.0.0",
        "lint-staged": "^13.2.3",
        "prettier": "^3.0.0",
        "rimraf": "^5.0.1",
        "tsup": "^7.1.0",
        "typedoc": "^0.25.0",
        "typedoc-theme-hierarchy": "^4.0.0",
        "typescript": "^5.1.6",
        "vite": "^4.4.2",
        "vitest": "^0.34.0"
    },
    "commitlint": {
        "extends": [
            "@nrsk/config-conventional"
        ]
    },
    "lint-staged": {
        "*.{js,ts,json}": [
            "prettier --write"
        ],
        "*.{js,ts}": [
            "eslint --fix"
        ]
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "browserslist": [
        "defaults",
        "not IE 11"
    ]
}
