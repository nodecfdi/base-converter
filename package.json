{
    "name": "@nodecfdi/base-converter",
    "version": "1.0.0",
    "description": "Librería que convierte un número entre bases arbitrarias",
    "keywords": [
        "base",
        "converter",
        "decimal",
        "hexadecimal",
        "binary"
    ],
    "private": false,
    "author": "OcelotlStudio <contacto@ocelotlstudio.com>",
    "license": "MIT",
    "type": "module",
    "main": "./dist/base-converter.cjs",
    "module": "./dist/base-converter.js",
    "unpkg": "./dist/base-converter.global.js",
    "browser": "./dist/base-converter.global.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/base-converter.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/base-converter.cjs"
            }
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "prepare": "husky",
        "lint": "eslint . --fix --ext .ts,.js",
        "lint:check": "eslint . --ext .ts,.js",
        "test": "vitest",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "build": "rimraf dist && tsup",
        "gen:docs": "rimraf docs && typedoc --options typedoc.json",
        "release": "pnpm run build && pnpm changeset publish"
    },
    "repository": "https://github.com/nodecfdi/base-converter",
    "bugs": {
        "url": "https://github.com/nodecfdi/base-converter/issues"
    },
    "homepage": "https://github.com/nodecfdi/base-converter",
    "devDependencies": {
        "@changesets/cli": "^2.27.1",
        "@commitlint/cli": "^19.0.1",
        "@types/node": "^20.11.20",
        "@vitest/coverage-istanbul": "^1.3.1",
        "eslint": "^8.57.0",
        "husky": "^9.0.11",
        "jsdom": "^24.0.0",
        "prettier": "^3.2.5",
        "rimraf": "^5.0.5",
        "typedoc": "^0.25.9",
        "typescript": "^5.3.3",
        "vite": "^5.1.4",
        "vitest": "^1.3.1"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "browserslist": [
        "defaults",
        "not IE 11"
    ]
}
